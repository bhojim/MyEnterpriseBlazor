@page "/tag/{Id:int}/view"
@using Microsoft.AspNetCore.Authorization
@namespace MyEnterpriseBlazor.Client.Pages.Entities.Tag

@attribute [Authorize(Roles = "ROLE_USER")]

<div class="row justify-content-center">
    <div class="col-8">
        @if (Tag != null && Tag.Id != 0)
        {
            <div>
                <h2><span>Tag</span>@Tag.Id</h2>

                <hr>

                @*<jhi-alert-error></jhi-alert-error>*@

                <dl class="row-md jh-entity-details">
                    <dt><span>Name</span></dt>
                    <dd>
                        <span>@Tag.Name</span>
                    </dd>
                </dl>

                <button @onclick="Back" class="btn btn-info">
                    <Icon Name='"fa-arrow-left"' />&nbsp;<span>Back</span>
                </button>

                <a href="/tag/@Tag.Id/edit" class="btn btn-primary">
                    <Icon Name='"fa-pencil-alt"' />&nbsp;<span>Edit</span>
                </a>
            </div>
        }
    </div>
</div>